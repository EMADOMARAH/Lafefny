<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Questionnaire1">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/whatsapp_image_2021_03_15_at_1_25_20_pm__1_">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/header_questionnaire"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/btnborder">

        <Button
            android:id="@+id/btn_questionnaire1_search"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="310dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="9dp"
            android:backgroundTint="@color/white"
            android:drawableEnd="@drawable/ic_baseline_search_24"
            android:paddingEnd="10dp" /> <!-- edit in margin again  -->

        <Button
            android:id="@+id/btn_questionnaire1_back"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:backgroundTint="@color/Lafefny1"
            android:drawableEnd="@drawable/ic_baseline_arrow_back9_24" />

        <TextView
            android:id="@+id/txt_questionnaire"
            android:layout_width="391dp"
            android:layout_height="54dp"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="false"
            android:layout_marginStart="6dp"
            android:layout_marginTop="1dp"
            android:fontFamily="serif"
            android:text="Questionnaire"
            android:textAlignment="center"
            android:textColor="@color/Lafefny2"
            android:textSize="35sp"
            android:textStyle="bold" />
    </com.google.android.material.bottomnavigation.BottomNavigationView>

        <TextView
            android:id="@+id/intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:fontFamily="serif"
            android:textColor="@color/Lafefny2"
            android:textSize="25sp"
            android:lineSpacingMultiplier="1.5"
            android:text="For a better and different Experience “Lafefny” trying to get the most suitable suggestions that fits your  preferences ,Kindly check this questionnaire. "
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/happyface"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="354dp"
            android:layout_marginLeft="303dp"
            app:srcCompat="@drawable/ic_baseline_happy_face_4" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/question1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/intro"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="14dp"
            android:background="@drawable/btnborder7">

            <TextView
                android:id="@+id/txt_Question1"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="serif"
                android:lineSpacingMultiplier="1.3"
                android:text="1. Do you prefer a place in your area (2-8 km away)?"
                android:textAlignment="textStart"
                android:textColor="@color/Lafefny2"
                android:textSize="25sp" />

            <RadioGroup
                android:id="@+id/Ques1_group"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_Question1"
                android:layout_marginTop="40dp">

                <RadioButton
                    android:id="@+id/radio_agree"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_Question1"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="70dp"
                    android:fontFamily="serif"
                    android:textSize="18sp"
                    android:text="Agree"
                    android:textColor="@color/Lafefny2"
                    android:textColorHint="@color/Lafefny2" />

                <RadioButton
                    android:id="@+id/radio_disagree"
                    android:layout_width="166dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/radio_agree"
                    android:layout_marginStart="20dp"
                    android:textSize="18sp"
                    android:fontFamily="serif"
                    android:text="Disagree"
                    android:textColor="@color/Lafefny2" />


            </RadioGroup>
        </com.google.android.material.bottomnavigation.BottomNavigationView>
        <Button
            android:id="@+id/btn_skip"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/question1"
            android:textColor="@color/Lafefny2"
            android:backgroundTint="@color/white"
            android:layout_marginTop="15dp"
            android:layout_marginStart="200dp"
            android:text="Skip" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/question1"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/btn_skip"
            android:backgroundTint="@color/white"
            android:text="Next"
            android:textColor="@color/Lafefny2"
            android:textSize="12sp" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/questionnaire1_footer"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="false"
            android:layout_below="@id/question1"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="730dp"
            android:background="@drawable/btnborder">

            <Button
                android:id="@+id/btn_questionnaire1_home"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/question1"
                android:backgroundTint="@color/white"
                android:drawableEnd="@drawable/ic_baseline_home6_24" />

            <Button
                android:id="@+id/btn_questionnaire1_loc"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/question1"
                android:layout_marginBottom="11dp"
                android:layout_marginEnd="170dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/white"
                android:drawableEnd="@drawable/ic_baseline_location9_on_24" />
            <Button
                android:id="@+id/btn_questionnaire1_user"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_skip"
                android:layout_marginStart="200dp"
                android:layout_marginTop="2dp"
                android:backgroundTint="@color/white"
                android:drawableEnd="@drawable/ic_profile_user6" />

            <Button
                android:id="@+id/btn_questionnaire1_sort"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_below="@id/btn_next"
                android:layout_marginStart="300dp"
                android:layout_marginTop="3dp"
                android:backgroundTint="@color/white"
                android:drawableEnd="@drawable/sort4" />
        </com.google.android.material.bottomnavigation.BottomNavigationView>

    </RelativeLayout>
</ScrollView>