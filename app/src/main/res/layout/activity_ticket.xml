<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ticket"
    android:background="@color/Lafefny1"
    >

    <RelativeLayout
        android:id="@+id/AllScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="295dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/white"
            android:fontFamily="serif"
            android:text="DONE"
            android:onClick="TicketOnClick"
            android:textColor="@color/Lafefny2"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_done"
            android:layout_marginLeft="330dp"
            android:background="@drawable/ic_baseline_file_upload_24" />

        <ImageView
            android:id="@+id/img_background"
            android:layout_width="332dp"
            android:layout_height="165dp"
            android:layout_below="@id/txt_ticket_id"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/logo2"/>


        <TextView
            android:id="@+id/txt_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:text="Ticket"
            android:textColor="@color/Lafefny2"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_ticket_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="60dp"
            android:fontFamily="serif"
            android:text="Ticket ID"
            android:textColor="@color/Lafefny2"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_ticket_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:layout_marginTop="60dp"
            android:fontFamily="serif"
            android:text="#221999"
            android:textColor="@color/Grey"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_ticket_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="300dp"
            android:fontFamily="serif"
            android:text="Sound and Light Show"
            android:textColor="@color/Lafefny2"
            android:textSize="35sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_ticket_hosted_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_ticket_name"
            android:layout_marginStart="115dp"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:text=""
            android:textColor="@color/Grey"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_ticket_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_ticket_hosted_by"
            android:layout_marginStart="55dp"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:text="Date and Time"
            android:textColor="@color/Lafefny2"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_ticket_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_ticket_date_time"
            android:layout_marginStart="55dp"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:text="Thursday 29 Jan 2020"
            android:textColor="@color/Grey"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_ticket_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_ticket_date"
            android:layout_marginStart="55dp"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:text="07:00 PM - 08:00 PM"
            android:textColor="@color/Grey"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_ticket_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_ticket_time"
            android:layout_marginStart="55dp"
            android:layout_marginTop="20dp"
            android:fontFamily="serif"
            android:text="Location"
            android:textColor="@color/Lafefny2"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_ticket_location_details"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_ticket_location"
            android:layout_marginStart="55dp"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:lineSpacingExtra="4dp"
            android:text="Abu Alhol Square - Nazlet El-Semman- Giza/Egpt"
            android:textColor="@color/Grey"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_ticket_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_ticket_location_details"
            android:layout_marginStart="55dp"
            android:layout_marginTop="20dp"
            android:fontFamily="serif"
            android:text="No. of Tickets"
            android:textColor="@color/Lafefny2"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/integer_ticket_number_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_ticket_number"
            android:layout_marginStart="65dp"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:text="2"
            android:textColor="@color/Grey"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_ticket_number_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_ticket_number"
            android:layout_marginStart="90dp"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:text=" Regular"
            android:textColor="@color/Grey"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/integer_ticket_number_vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_ticket_number_regular"
            android:layout_marginStart="65dp"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:text="1"
            android:textColor="@color/Grey"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_ticket_number_vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_ticket_number_regular"
            android:layout_marginStart="90dp"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:text=" VIP"
            android:textColor="@color/Grey"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_ticket_total_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/integer_ticket_number_vip"
            android:layout_marginStart="55dp"
            android:layout_marginTop="20dp"
            android:fontFamily="serif"
            android:text="Total Payment"
            android:textColor="@color/Lafefny2"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/integer_ticket_total_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_ticket_total_payment"
            android:layout_marginStart="65dp"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:text="630 EGP"
            android:textColor="@color/Grey"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_ticket_promotion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/integer_ticket_total_payment"
            android:layout_marginStart="55dp"
            android:layout_marginTop="20dp"
            android:fontFamily="serif"
            android:text="Promotion"
            android:textColor="@color/Lafefny2"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/integer_ticket_promotion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_ticket_promotion"
            android:layout_marginStart="65dp"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:text="-20 EGP"
            android:textColor="@color/Grey"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/disclaimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/integer_ticket_promotion"
            android:layout_marginStart="55dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="35dp"
            android:fontFamily="serif"
            android:lineSpacingExtra="4dp"
            android:lineSpacingMultiplier="1"
            android:text="* Disclaimer --> ticket expires in 6 days based on the type ofm service this ticket belongs to."
            android:textColor="@color/Grey"
            android:textSize="15sp" />
        <Button
            android:id="@+id/btn_transportation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/disclaimer"
            android:layout_marginStart="105dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/white"
            android:fontFamily="serif"
            android:text="Get a ride"
            android:onClick="TicketOnClick"
            android:textColor="@color/Lafefny2"
            android:textSize="25sp"
            android:textStyle="bold"/>



    </RelativeLayout>

</ScrollView>