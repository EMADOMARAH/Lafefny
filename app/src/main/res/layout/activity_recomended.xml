<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Recomended"
    >
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/recomended_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:backgroundTint="@color/Lafefny1"
            android:src="@drawable/ic_baseline_arrow_back9_24"
            android:onClick="RecomendedOnClick"
            />
        <TextView
            android:id="@+id/txt_Preferences"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="Recomended"
            android:textAlignment="center"
            android:textColor="@color/Lafefny2"
            android:textSize="39sp"
            android:textStyle="bold" />

    </Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@drawable/whatsapp_image_2021_03_15_at_1_25_20_pm__1_"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recomended_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/recomended_item"
            />

    </LinearLayout>

</LinearLayout>