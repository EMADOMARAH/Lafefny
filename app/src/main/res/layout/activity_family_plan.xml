                android:textColor="#CF8B74"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_rating_stereo_fam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="127dp"
                android:layout_marginTop="38dp"
                android:text="@string/_90_100"
                android:textColor="@color/Grey"
                android:textSize="15sp"
                app:drawableLeftCompat="@drawable/happyface3" />

            <TextView
                android:id="@+id/txt_rating_count_stereo_fam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="130dp"
                android:layout_marginTop="68dp"
                android:text="@string/_16949_ratings"
                android:textColor="@color/Grey"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txt_loc_stereo_fam"
                android:layout_width="84dp"
                android:layout_height="25dp"
                android:layout_marginStart="275dp"
                android:layout_marginTop="109dp"
                android:text="@string/get_location"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txt_details_stereo_fam"
                android:layout_width="109dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="129dp"
                android:layout_marginTop="109dp"
                android:text="@string/view_all_details" />

        </com.google.android.material.bottomnavigation.BottomNavigationView>

