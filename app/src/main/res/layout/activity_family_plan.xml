            <Button
                android:id="@+id/txt_location_stereo_fam"
                android:layout_width="105dp"
                android:layout_height="51dp"
                android:layout_marginStart="270dp"
                android:layout_marginTop="94dp"
                android:alpha="0.1"
                android:backgroundTint="@color/Grey"
                android:shadowColor="@color/Grey"
                android:textSize="11sp"
                app:drawableStartCompat="@drawable/ic_baseline_location10_on_24" />

            <ImageView
                android:id="@+id/img_stereo_fam"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/stereo"
                android:contentDescription="@string/todo" />

            <ImageView
                android:id="@+id/img_loc_stereo_fam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="345dp"
                android:layout_marginTop="105dp"
                android:background="@drawable/ic_baseline_location10_on_24"
                android:contentDescription="@string/todo" />

            <ImageView
