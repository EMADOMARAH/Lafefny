                android:layout_height="wrap_content"
                android:backgroundTint="#8F520C"
                android:drawableEnd="@drawable/ic_baseline_arrow_back9_24" />

            <TextView
                android:id="@+id/txt_family"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
