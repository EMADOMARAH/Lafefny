                android:textColor="@color/Grey"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txt_loc_bounceinc_fam"
                android:layout_width="84dp"
                android:layout_height="25dp"
                android:layout_marginStart="275dp"
                android:layout_marginTop="109dp"
