<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:ignore="RelativeOverlap">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/whatsapp_image_2021_03_15_at_1_25_20_pm__1_">

        <TextView
            android:id="@+id/ent_categ"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/btnborder" />

        <Button
            android:id="@+id/btn_search_entcateg"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="9dp"
            android:layout_marginStart="300dp"
            android:layout_marginTop="4dp"
            android:backgroundTint="@color/white"
            android:drawableEnd="@drawable/ic_baseline_search_24"
            android:paddingRight="10dp" />

        <Button
            android:id="@+id/btn_back_entcateg"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/Lafefny1"
            android:drawableEnd="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:id="@+id/txt_amusement_entcateg"
            android:layout_width="391dp"
            android:layout_height="54dp"
            android:layout_alignParentEnd="false"
            android:layout_alignParentTop="false"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:text="@string/Entertainment"
            android:textAlignment="center"
            android:textColor="@color/Lafefny2"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"/>

        <Button
            android:id="@+id/btn_amusement_park_entcateg"
            android:layout_width="344dp"
            android:layout_height="65dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_below="@id/ent_categ"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="38dp"
            android:layout_marginTop="135dp"
            android:backgroundTint="@color/white"
            android:fontFamily="serif"
            android:gravity="center"
            android:lineSpacingExtra="10sp"
            android:text="@string/amusement_parks"
            android:textAlignment="center"
            android:textColor="@color/Lafefny2"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_cinema_entcateg"
            android:layout_width="344dp"
            android:layout_height="65dp"
            android:layout_alignParentEnd="false"
            android:layout_alignParentTop="false"
            android:layout_below="@id/btn_amusement_park_entcateg"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="37dp"
            android:layout_marginTop="65dp"
            android:backgroundTint="@color/white"
            android:fontFamily="serif"
            android:gravity="center"
            android:lineSpacingExtra="10sp"
            android:text="@string/cinema"
            android:textAlignment="center"
            android:textColor="@color/Lafefny2"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_gaming_area_entcateg"
            android:layout_width="344dp"
            android:layout_height="65dp"
            android:layout_alignParentEnd="false"
            android:layout_alignParentTop="false"
            android:layout_below="@id/btn_cinema_entcateg"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="65dp"
            android:backgroundTint="@color/white"
            android:fontFamily="serif"
            android:gravity="center"
            android:lineSpacingExtra="10sp"
            android:text="@string/gaming"
            android:textAlignment="center"
            android:textColor="@color/Lafefny2"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_toursim_area_entcateg"
            android:layout_width="344dp"
            android:layout_height="65dp"
            android:layout_alignParentEnd="false"
            android:layout_alignParentTop="false"
            android:layout_below="@id/btn_gaming_area_entcateg"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="65dp"
            android:backgroundTint="@color/white"
            android:fontFamily="serif"
            android:gravity="center"
            android:lineSpacingExtra="10sp"
            android:text="@string/tourism"
            android:textAlignment="center"
            android:textColor="@color/Lafefny2"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_restaurant_entcateg"
            android:layout_width="344dp"
            android:layout_height="65dp"
            android:layout_alignParentEnd="false"
            android:layout_alignParentTop="false"
            android:layout_below="@id/btn_toursim_area_entcateg"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="65dp"
            android:backgroundTint="@color/white"
            android:fontFamily="serif"
            android:gravity="center"
            android:lineSpacingExtra="10sp"
            android:text="@string/restaurants"
            android:textAlignment="center"
            android:textColor="@color/Lafefny2"
            android:textSize="30sp"
            android:textStyle="bold" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="798dp"
            android:layout_alignParentBottom="false"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="-9dp"
            android:layout_marginTop="62dp"
            android:alpha="0.5"
            android:contentDescription="@string/todo11" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/footer_entcateg"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_below="@id/btn_restaurant_entcateg"
            android:layout_centerHorizontal="false"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="800dp"
            android:background="@drawable/btnborder">

            <Button
                android:id="@+id/btn_home1_entcateg"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_restaurant_entcateg"
                android:backgroundTint="@color/white"
                android:drawableEnd="@drawable/ic_baseline_home_24" />

            <Button
                android:id="@+id/btn_loc_entcateg"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/btn_restaurant_entcateg"
                android:layout_marginBottom="11dp"
                android:layout_marginEnd="170dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/white"
                android:drawableEnd="@drawable/ic_baseline_location_on_24" />

            <Button
                android:id="@+id/btn_user_entcateg"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_restaurant_entcateg"
                android:layout_marginStart="200dp"
                android:layout_marginTop="2dp"
                android:backgroundTint="@color/white"
                android:drawableEnd="@drawable/ic_profile_user" />

            <Button
                android:id="@+id/btn_filter_entcateg"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_restaurant_entcateg"
                android:layout_marginStart="300dp"
                android:layout_marginTop="2dp"
                android:backgroundTint="@color/white"
                android:drawableEnd="@drawable/ic_baseline_filter_alt_24"
                android:paddingRight="10dp" />


        </com.google.android.material.bottomnavigation.BottomNavigationView>


    </RelativeLayout>
</ScrollView>