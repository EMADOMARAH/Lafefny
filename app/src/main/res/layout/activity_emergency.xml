<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Emergency">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/whatsapp_image_2021_03_15_at_1_25_20_pm__1_">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/Emergency_header"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/btnborder">

            <Button
                android:id="@+id/btn_emg_search"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="310dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="9dp"
                android:backgroundTint="@color/white"
                android:drawableEnd="@drawable/ic_baseline_search_24"
                android:paddingEnd="10dp" />

            <Button
                android:id="@+id/menu2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-20dp"
                android:layout_marginTop="15dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:backgroundTint="@color/black"
                android:drawableEnd="@drawable/ic_baseline_menu_24"/>

            <TextView
                android:id="@+id/txt_emergency"
                android:layout_width="380dp"
                android:layout_height="54dp"
                android:layout_alignParentTop="false"
                android:layout_alignParentEnd="false"
                android:layout_marginStart="6dp"
                android:layout_marginTop="1dp"
                android:fontFamily="serif"
                android:text="Emergency"
                android:textAlignment="center"
                android:textColor="@color/Lafefny2"
                android:textSize="35sp"
                android:textStyle="bold" />
        </com.google.android.material.bottomnavigation.BottomNavigationView>

        <TextView
            android:id="@+id/txt_emg"
            android:layout_width="362dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Emergency_header"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:fontFamily="serif"
            android:lineSpacingMultiplier="1.5"
            android:text="Keep Calm!"
            android:textColor="@color/Lafefny2"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_emg2"
            android:layout_width="362dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/txt_emg"
            android:fontFamily="serif"
            android:lineSpacingMultiplier="1.5"
            android:text="What Kind of emergency?"
            android:textColor="@color/Lafefny2"
            android:textSize="25sp" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/policy"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_emg2"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="false"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="14dp"
            android:background="@drawable/btnborder7"
            app:backgroundTint="#3C92FC">

            <ImageView
                android:id="@+id/Policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginStart="83dp"
                app:srcCompat="@drawable/ic_baseline_local_police_24" />

            <TextView
                android:id="@+id/txt_policy"
                android:layout_width="362dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="-75dp"
                android:layout_marginTop="45dp"
                android:fontFamily="serif"
                android:lineSpacingMultiplier="1.5"
                android:text="Policy"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_num"
                android:layout_width="362dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="-75dp"
                android:layout_marginTop="85dp"
                android:fontFamily="serif"
                android:lineSpacingMultiplier="1.5"
                android:text="122"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_call"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_below="@id/txt_num"
                android:textColor="@color/Lafefny2"
                android:backgroundTint="@color/white"
                android:layout_marginTop="119dp"
                android:layout_marginStart="52dp"
                android:textSize="14sp"
                android:text="Call Now" />
        </com.google.android.material.bottomnavigation.BottomNavigationView>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/amb"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/policy"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="false"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="14dp"
            android:background="@drawable/btnborder7"
            app:backgroundTint="#29DDD7">

            <ImageView
                android:id="@+id/ambulance"
                android:layout_width="59dp"
                android:layout_height="64dp"
                android:layout_margin="-10dp"
                android:layout_marginStart="77dp"
                android:layout_marginTop="-6dp"
                app:srcCompat="@drawable/ic_emergency_ambulance"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/txt_ambulance"
                android:layout_width="362dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="-75dp"
                android:layout_marginTop="50dp"
                android:fontFamily="serif"
                android:lineSpacingMultiplier="1.5"
                android:text="Ambulance"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_num2"
                android:layout_width="362dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="-75dp"
                android:layout_marginTop="85dp"
                android:fontFamily="serif"
                android:lineSpacingMultiplier="1.5"
                android:text="123"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_call2"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_below="@id/txt_num2"
                android:textColor="@color/Lafefny2"
                android:backgroundTint="@color/white"
                android:layout_marginTop="119dp"
                android:layout_marginStart="52dp"
                android:textSize="14sp"
                android:text="Call Now" />
        </com.google.android.material.bottomnavigation.BottomNavigationView>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/safety"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/amb"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="false"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="14dp"
            android:background="@drawable/btnborder7"
            app:backgroundTint="#FE8147">

            <ImageView
                android:id="@+id/safety_fire"
                android:layout_width="59dp"
                android:layout_height="64dp"
                android:layout_margin="-10dp"
                android:layout_marginStart="75dp"
                android:layout_marginTop="7dp"
                app:srcCompat="@drawable/ic_fire_extinguisher__1_"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/txt_safety"
                android:layout_width="362dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="-79dp"
                android:layout_marginTop="68dp"
                android:fontFamily="serif"
                android:lineSpacingMultiplier="1.5"
                android:text="Fire and Safety"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_num3"
                android:layout_width="362dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="-75dp"
                android:layout_marginTop="98dp"
                android:fontFamily="serif"
                android:lineSpacingMultiplier="1.5"
                android:text="180"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_call3"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_below="@id/txt_num3"
                android:textColor="@color/Lafefny2"
                android:backgroundTint="@color/white"
                android:layout_marginTop="130dp"
                android:layout_marginStart="52dp"
                android:textSize="14sp"
                android:text="Call Now" />
        </com.google.android.material.bottomnavigation.BottomNavigationView>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/emg_footer"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_below="@id/safety"
            android:layout_centerHorizontal="false"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="1930dp"
            android:background="@drawable/btnborder">

            <Button
                android:id="@+id/btn_emg_home"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:drawableEnd="@drawable/ic_baseline_home6_24" />

            <Button
                android:id="@+id/btn_emg_loc"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="11dp"
                android:layout_marginEnd="170dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/white"
                android:drawableEnd="@drawable/ic_baseline_location9_on_24" />
            <Button
                android:id="@+id/btn_emg_user"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="200dp"
                android:layout_marginTop="2dp"
                android:backgroundTint="@color/white"
                android:drawableEnd="@drawable/ic_profile_user6" />

            <Button
                android:id="@+id/btn_emg_sort"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_marginStart="300dp"
                android:layout_marginTop="3dp"
                android:backgroundTint="@color/white"
                android:drawableEnd="@drawable/sort4" />
        </com.google.android.material.bottomnavigation.BottomNavigationView>

    </RelativeLayout>

</ScrollView>