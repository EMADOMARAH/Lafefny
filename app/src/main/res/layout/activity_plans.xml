<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:ignore="RelativeOverlap">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/whatsapp_image_2021_03_15_at_1_25_20_pm__1_">

        <TextView
            android:id="@+id/plans"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/btnborder" />

        <Button
            android:id="@+id/btn_search_plan_categ"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="9dp"
            android:layout_marginStart="300dp"
            android:layout_marginTop="4dp"
            android:backgroundTint="@color/white"
            android:drawableEnd="@drawable/ic_baseline_search_24"
            android:paddingRight="10dp" />

        <Button
            android:id="@+id/btn_back_plan_categ"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/Lafefny1"
            android:drawableEnd="@drawable/ic_baseline_arrow_back_24"
            android:onClick="onClickall"
            />

        <TextView
            android:id="@+id/txt_plans_plan_categ"
            android:layout_width="391dp"
            android:layout_height="54dp"
            android:layout_alignParentEnd="false"
            android:layout_alignParentTop="false"
            android:layout_marginTop="3dp"
            android:fontFamily="serif"
            android:text="Plans"
            android:textAlignment="center"
            android:textColor="@color/Lafefny2"
            android:textSize="39sp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"/>

        <Button
            android:id="@+id/btn_adventure"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_below="@id/plans"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="38dp"
            android:layout_marginTop="165dp"
            android:backgroundTint="@color/white"
            android:fontFamily="serif"
            android:gravity="center"
            android:lineSpacingExtra="10sp"
            android:onClick="openAdventurousPlans"
            android:text="Adventurous Plans"
            android:textAlignment="center"
            android:textColor="@color/Lafefny2"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_romantic"
            android:layout_width="344dp"
            android:layout_height="65dp"
            android:layout_alignParentEnd="false"
            android:layout_alignParentTop="false"
            android:layout_below="@id/btn_adventure"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="37dp"
            android:layout_marginTop="65dp"
            android:backgroundTint="@color/white"
            android:fontFamily="serif"
            android:gravity="center"
            android:lineSpacingExtra="10sp"
            android:text="romantic Plan"
            android:textAlignment="center"
            android:textColor="@color/Lafefny2"
            android:textSize="30sp"
            android:textStyle="bold"
            android:onClick="openRomanticPlan"/>

        <Button
            android:id="@+id/btn_family"
            android:layout_width="344dp"
            android:layout_height="65dp"
            android:layout_alignParentEnd="false"
            android:layout_alignParentTop="false"
            android:layout_below="@id/btn_romantic"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="65dp"
            android:backgroundTint="@color/white"
            android:fontFamily="serif"
            android:gravity="center"
            android:lineSpacingExtra="10sp"
            android:text="Family Plan"
            android:textAlignment="center"
            android:textColor="@color/Lafefny2"
            android:textSize="30sp"
            android:textStyle="bold"
            android:onClick="openFamilyPlan"/>



        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/footer_plan_categ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_below="@id/btn_family"
            android:layout_centerHorizontal="false"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="620dp"
            android:background="@drawable/btnborder">

            <Button
                android:id="@+id/btn_home1_plan_categ_plan_categ"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_family"
                android:backgroundTint="@color/white"
                android:drawableEnd="@drawable/ic_baseline_home_24" />

            <Button
                android:id="@+id/btn_loc_plan_categ"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/btn_family"
                android:layout_marginBottom="11dp"
                android:layout_marginEnd="170dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/white"
                android:drawableEnd="@drawable/ic_baseline_location_on_24" />

            <Button
                android:id="@+id/btn_user_plan_categ"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_family"
                android:layout_marginStart="200dp"
                android:layout_marginTop="2dp"
                android:backgroundTint="@color/white"
                android:drawableEnd="@drawable/ic_profile_user" />

            <Button
                android:id="@+id/btn_filter_plan_categ"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_family"
                android:layout_marginStart="300dp"
                android:layout_marginTop="2dp"
                android:backgroundTint="@color/white"
                android:drawableEnd="@drawable/ic_baseline_filter_alt_24"
                android:paddingRight="10dp" />


        </com.google.android.material.bottomnavigation.BottomNavigationView>


    </RelativeLayout>
</ScrollView>