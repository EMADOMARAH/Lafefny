<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/image_new"
        android:orientation="vertical"
        android:paddingTop="15dp">

        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="95dp"
                android:fontFamily="serif"
                android:gravity="center_horizontal"
                android:text="Edit Profile"
                android:textAlignment="center"
                android:textColor="@color/Lafefny2"
                android:textSize="39sp"
                android:textStyle="bold" />
        </Toolbar>

        <ImageView
            android:id="@+id/edit_image_view"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:foregroundGravity="center_horizontal"
            app:srcCompat="@drawable/ic_profile_user6" />

        <Button
            android:id="@+id/edit_image_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/Lafefny1"
            android:fontFamily="serif"
            android:gravity="center_horizontal"
            android:onClick="EditProfileOnClick"
            android:text="@string/edit_photo"
            android:textColor="@color/Lafefny2"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:fontFamily="serif"
            android:text="@string/first_name"
            android:textColor="@color/Lafefny2"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/edit_first"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btnborder"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="serif"
            android:text="@string/last_name"
            android:textColor="@color/Lafefny2"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/edit_last"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:autofillHints=""
            android:background="@drawable/btnborder"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="serif"
            android:text="@string/username"
            android:textColor="@color/Lafefny2"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/edit_username"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:autofillHints=""
            android:background="@drawable/btnborder"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="serif"
            android:text="@string/email"
            android:textColor="@color/Lafefny2"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/edit_email"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:autofillHints=""
            android:background="@drawable/btnborder"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="serif"
            android:text="Password"
            android:textColor="@color/Lafefny2"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/edit_password"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:autofillHints=""
            android:background="@drawable/btnborder"
            android:ems="10"
            android:inputType="textVisiblePassword"
            android:padding="10dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="serif"
            android:text="@string/mobile_number"
            android:textColor="@color/Lafefny2"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/edit_mobile"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:autofillHints=""
            android:background="@drawable/btnborder"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/edit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/white"
            android:fontFamily="sans-serif"
            android:onClick="EditProfileOnClick"
            android:text="Edit"
            android:textAllCaps="false"
            android:textColor="@color/Lafefny2"
            android:textSize="30sp" />


    </LinearLayout>

</ScrollView>
