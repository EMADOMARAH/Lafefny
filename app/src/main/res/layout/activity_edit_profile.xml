<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditProfile">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/edit_back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:backgroundTint="@color/Lafefny1"
                android:src="@drawable/ic_baseline_arrow_back9_24"
                android:onClick="EditProfileOnClick"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="Edit Profile"
                android:textAlignment="center"
                android:textColor="@color/Lafefny2"
                android:textSize="39sp"
                android:textStyle="bold" />
        </Toolbar>
        <ImageView
            android:id="@+id/edit_image_view"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/ic_baseline_account_user10_24"
            android:layout_gravity="center_horizontal"
            />
        <Button
            android:id="@+id/edit_image_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="@string/edit_photo"
            android:textColor="@color/Lafefny2"
            android:layout_gravity="center_horizontal"
            android:textSize="15sp"
            android:backgroundTint="@color/Lafefny1"
            android:onClick="EditProfileOnClick"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/first_name"
            android:fontFamily="serif"
            android:textColor="@color/Lafefny2"
            android:layout_marginStart="20dp"
            android:textSize="25sp"/>
        <EditText
            android:id="@+id/edit_first"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btnborder"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/last_name"
            android:fontFamily="serif"
            android:textColor="@color/Lafefny2"
            android:layout_marginStart="20dp"
            android:textSize="25sp"/>
        <EditText
            android:id="@+id/edit_last"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:autofillHints=""
            android:background="@drawable/btnborder"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/username"
            android:fontFamily="serif"
            android:textColor="@color/Lafefny2"
            android:layout_marginStart="20dp"
            android:textSize="25sp"/>
        <EditText
            android:id="@+id/edit_username"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:autofillHints=""
            android:background="@drawable/btnborder"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/email"
            android:fontFamily="serif"
            android:textColor="@color/Lafefny2"
            android:layout_marginStart="20dp"
            android:textSize="25sp"/>
        <EditText
            android:id="@+id/edit_email"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:autofillHints=""
            android:background="@drawable/btnborder"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Password"
            android:fontFamily="serif"
            android:textColor="@color/Lafefny2"
            android:layout_marginStart="20dp"
            android:textSize="25sp"/>
        <EditText
            android:id="@+id/edit_password"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:autofillHints=""
            android:background="@drawable/btnborder"
            android:ems="10"
            android:inputType="textVisiblePassword"
            android:padding="10dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/mobile_number"
            android:fontFamily="serif"
            android:textColor="@color/Lafefny2"
            android:layout_marginStart="20dp"
            android:textSize="25sp"/>
        <EditText
            android:id="@+id/edit_mobile"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:autofillHints=""
            android:background="@drawable/btnborder"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/edit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/Lafefny2"
            android:fontFamily="sans-serif"
            android:textSize="30sp"
            android:onClick="EditProfileOnClick"
            />


    </LinearLayout>

</ScrollView>
