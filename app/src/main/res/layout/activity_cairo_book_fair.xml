<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/book_fair"
    tools:context="com.bis.lafefny.CairoBookFair">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/btn_transportation_cbf"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_ticket_cbf"
            android:layout_marginStart="25dp"
            android:layout_marginTop="6dp"
            android:backgroundTint="@color/white"
            android:fontFamily="serif"
            android:text="@string/transportation"
            android:onClick="CairoBookFairOnClick"
            android:textColor="#CF8B74"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_ticket_cbf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/desc2_cbf"
            android:layout_marginStart="130dp"
            android:layout_marginTop="35dp"
            android:backgroundTint="@color/white"
            android:fontFamily="serif"
            android:text="@string/ticket"
            android:onClick="CairoBookFairOnClick"
            android:textColor="#CF8B74"
            android:textSize="30sp" />


        <TextView
            android:id="@+id/txt_address_cbf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/desc1_cbf"
            android:layout_marginStart="18dp"
            android:layout_marginTop="45dp"
            android:fontFamily="serif"
            android:textColor="@color/Grey"
            android:textSize="25sp"
            android:textStyle="bold" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/cbf_header"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="-5dp"
            android:background="@drawable/btnborder7">

            <Button
                android:id="@+id/btn_filter_cbf"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="345dp"
                android:layout_marginTop="7dp"
                android:backgroundTint="@color/white"
                android:drawableEnd="@drawable/ic_baseline_filter_alt6_24" />

            <Button
                android:id="@+id/btn_back_cbf"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:onClick="CairoBookFairOnClick"
                android:backgroundTint="@color/Grey"
                android:drawableEnd="@drawable/ic_baseline_arrow_back9_24" />

            <TextView
                android:id="@+id/txt_book_fair"
                android:layout_width="566dp"
                android:layout_height="70dp"
                android:layout_alignParentEnd="false"
                android:layout_alignParentTop="false"
                android:layout_marginBottom="11dp"
                android:layout_marginTop="18dp"
                android:fontFamily="serif"
                android:layout_marginStart="36dp"
                android:text="International Book Fair"
               android:textColor="#CF8B74  "
                android:textSize="27sp"
                android:textStyle="bold" />


        </com.google.android.material.bottomnavigation.BottomNavigationView>


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/desc1_cbf"
            android:layout_width="389dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_below="@id/cbf_header"
            android:layout_centerHorizontal="false"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="110dp"
            android:background="@drawable/btnborder6">

            <TextView
                android:id="@+id/txt_book_fair_desc1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="serif"
                android:lineSpacingMultiplier="1.5"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="The Cairo International Book Fair is one of the biggest book fairs in the world, drawing hundreds of book sellers fromm around the world and about 2 million visitors each year. It is the largest book fair in the Arab world, as well as the oldest. In 2006, it was the second largest book fair in the world after the Frankfurt Book Fair..."
                android:textAlignment="center"
                android:textColor="#CF8B74"
                android:textSize="17.5sp" />


        </com.google.android.material.bottomnavigation.BottomNavigationView>


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/desc2_cbf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/desc1_cbf"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btnborder6">

            <TextView
                android:id="@+id/cairo_book_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:fontFamily="serif"
                android:lineSpacingMultiplier="1.5"
                android:paddingLeft="15dp"
                android:paddingRight="4dp"
                android:paddingTop="25dp"
                android:text="New Cairo, Cairo."
                android:textColor="#CF8B74 "
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:drawableLeft="@drawable/ic_baseline_location10_on_24"
                android:fontFamily="serif"
                android:lineSpacingMultiplier="1.5"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"

                android:paddingTop="25dp"
                android:textColor="#33446A"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/cairo_book_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:fontFamily="serif"
                android:lineSpacingMultiplier="1.5"
                android:paddingLeft="15dp"
                android:paddingRight="4dp"
                android:paddingTop="70dp"
                android:text="From June 30th till July 15th, 2021."
                android:textColor="#CF8B74 "
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:drawableLeft="@drawable/ic_baseline_calendar_today2_24"
                android:fontFamily="serif"
                android:lineSpacingMultiplier="1.5"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="70dp"
                android:textColor="#33446A"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/cairo_book_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="35dp"
                android:fontFamily="serif"
                android:lineSpacingMultiplier="1.5"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="115dp"
                android:text="5 LE."
                android:textColor="#CF8B74 "
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:drawableLeft="@drawable/ic_baseline_money2_24"
                android:fontFamily="serif"
                android:lineSpacingMultiplier="1.5"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="115dp"
                android:textColor="#33446A"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/cairo_book_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="35dp"
                android:fontFamily="serif"
                android:lineSpacingMultiplier="1.5"
                android:paddingLeft="15dp"
                android:paddingRight="4dp"
                android:paddingTop="160dp"
                android:text="9 AM - 10 PM.                      "
                android:textColor="#CF8B74 "
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:drawableLeft="@drawable/ic_baseline_watch_later_24"
                android:fontFamily="serif"
                android:lineSpacingMultiplier="1.5"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="160dp"
                android:textColor="#33446A"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="35dp"
                android:fontFamily="serif"
                android:lineSpacingMultiplier="1.5"
                android:paddingLeft="15dp"
                android:paddingRight="4dp"
                android:paddingTop="205dp"
                android:text="Organized By:"
                android:textColor="#CF8B74 "
                android:textStyle="bold"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/cairo_book_organized_by"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="35dp"
                android:fontFamily="serif"
                android:lineSpacingMultiplier="1.5"
                android:paddingLeft="35dp"
                android:paddingRight="4dp"
                android:paddingTop="245dp"
                android:text="General Egyptian Book Organization.                      "
                android:textColor="#CF8B74 "
                android:textSize="18sp" />
        </com.google.android.material.bottomnavigation.BottomNavigationView>


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/footer_cbf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_transportation_cbf"
            android:layout_centerHorizontal="false"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btnborder7">

            <EditText
                android:id="@+id/editTextTextPersonName_cbf"
                android:layout_width="265dp"
                android:layout_height="90dp"
                android:layout_marginStart="125dp"
                android:layout_marginTop="135dp"
                android:autofillHints=""
                android:hint="@string/give_your_review"
                android:inputType="textPersonName" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:alpha="0.5"
                android:background="@drawable/line_png_27963"
                android:backgroundTint="#33446A" />

            <ImageView
                android:id="@+id/user_profile_image_cbf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="330dp"
                android:background="@drawable/ic_profile_user7" />

            <RatingBar
                android:id="@+id/ratingBar_cbf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="95dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="97dp" />

            <RatingBar
                android:id="@+id/user_rate_cbf"
                android:layout_width="332dp"
                android:layout_height="wrap_content"
                android:paddingLeft="100dp"
                android:paddingRight="4dp"
                android:paddingTop="360dp" />

            <TextView
                android:id="@+id/txt_feedback_cbf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="serif"
                android:text="@string/your_feedback_matters"
                android:textAlignment="center"
                android:textColor="#CF8B74"
                android:textSize="33sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:fontFamily="serif"
                android:lineSpacingMultiplier="1.5"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="100dp"
                android:text="@string/rate"
                android:textColor="#CF8B74"
                android:textSize="30sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:fontFamily="serif"
                android:lineSpacingMultiplier="1.5"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="180dp"
                android:text="@string/review"
                android:textColor="#CF8B74"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/txt_others_feedback_cbf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editTextTextPersonName_cbf"
                android:layout_marginTop="255dp"
                android:fontFamily="serif"
                android:text="Other's Feedback"
                android:textAlignment="center"
                android:textColor="#CF8B74"
                android:textSize="33sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/username_cbf"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="serif"
                android:paddingLeft="110dp"
                android:paddingRight="4dp"
                android:paddingTop="325dp"
                android:text="MalakHesham99"
                android:textColor="#CF8B74"
                android:textSize="25sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="serif"
                android:paddingLeft="20dp"
                android:paddingRight="4dp"
                android:paddingTop="425dp"
                android:text="Comment"
                android:textColor="#CF8B74"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_review_cbf"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="serif"
                android:lineSpacingExtra="3dp"
                android:paddingLeft="20dp"
                android:paddingRight="4dp"
                android:paddingTop="475dp"
                android:text="comment.............................................."
                android:textColor="#CF8B74"
                android:textSize="20sp" />

        </com.google.android.material.bottomnavigation.BottomNavigationView>


    </RelativeLayout>

</ScrollView>
