        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/footer_rom"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentEnd="false"
            android:layout_alignParentTop="false"
            android:layout_below="@id/romantic_header"
            android:layout_centerHorizontal="false"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="1000dp"
            android:background="@drawable/btnborder6">

            <Button
                android:id="@+id/btn_home1_rom"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/gaming_area_header"
                android:backgroundTint="@color/white"
                android:drawableEnd="@drawable/ic_baseline_home6_24" />

            <Button
                android:id="@+id/btn_pre_rom"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_alignParentEnd="true"
