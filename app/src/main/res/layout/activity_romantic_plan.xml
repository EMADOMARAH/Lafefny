        <!-- change drawable to purple btn color -->


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/romantic_header"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:background="@drawable/btnborder6">

            <Button
                android:id="@+id/btn_filter_rom"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="9dp"
                android:layout_marginStart="330dp"
                android:layout_marginTop="2dp"
                android:backgroundTint="@color/white"
                android:drawableEnd="@drawable/ic_baseline_filter_alt6_24" />

            <Button
                android:id="@+id/btn_back_rom"
                style="@style/Widget.AppCompat.Button.Borderless"
