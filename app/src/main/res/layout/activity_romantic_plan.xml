                android:textColor="#CF8B74"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_get_loc_vox_rom"
                android:layout_width="84dp"
                android:layout_height="25dp"
                android:layout_marginStart="275dp"
